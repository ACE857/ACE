<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/background"

    tools:context=".FundRaising.requestFunds">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Request Funds"
                    android:textColor="#fff"
                    android:textColorHint="#fff"
                    android:textSize="24sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />
            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter title"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:layout_marginTop="20dp"
                android:id="@+id/raisefundtitle"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:hint="Describe why you need fund."
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:layout_marginTop="20dp"
                android:id="@+id/raiseFundStory"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                >
                <Button
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/raiseFundDocs"
                    android:text="Upload Supporting Document"
                    />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:scaleType="fitCenter"
                android:id="@+id/raiseFundImage"
                android:layout_height="190dp"
                android:src="@drawable/ic_image_aspect_ratio_black_24dp"
                />

            <EditText
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:id="@+id/raiseFundUPI"
                android:hint="Enter any UPI ID"
                />
            <EditText
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:layout_marginTop="20dp"
                android:id="@+id/raiseFundContact"
                android:hint="Enter Contact Details"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content">

                <Button
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Request Fund"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:id="@+id/raiseFundRequest"
                    />

            </LinearLayout>

        </LinearLayout>



    </ScrollView>





</LinearLayout>